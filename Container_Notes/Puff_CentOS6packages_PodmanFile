# Build this container with the following command:
#   podman build --no-cache --ulimit nofile=2048:2048 -t puffapp_c6pack -f Puff1_Dockerfile .
# Note:  you can list images with podman images
#        and remove images with podman rmi IMAGE_ID
FROM centos:6.9
# Install the distribution libraries needed to run puff
# and the post-processing scripts
COPY ./USGS-software/Ash3d_web/Container_Notes/CentOS6-Base.repo /etc/yum.repos.d/CentOS-Base.repo
RUN yum clean all
COPY ./USGS-software/Ash3d_web/Container_Notes/yumCO6.conf /etc/yum.conf
RUN yum update -y
COPY ./USGS-software/Ash3d_web/Container_Notes/epel6.repo /etc/yum.repos.d/epel.repo
RUN yum install --nogpgcheck -y epel-release
RUN yum update --nogpgcheck -y

RUN yum install --nogpgcheck -y GMT
#  Total download size: 26 M
RUN yum install --nogpgcheck -y GMT-coastlines*
# Total download size: 48 M
RUN yum install --nogpgcheck -y ImageMagick
# Total download size: 20 M
RUN yum install --nogpgcheck -y gifsicle
# Total download size: 135 k
RUN yum install --nogpgcheck -y gcc gcc-c++
# Total download size: 28 M
RUN yum install --nogpgcheck -y libjpeg libjpeg-devel
# Total download size: 96 k
RUN yum install --nogpgcheck -y netcdf*
# Total download size: 25 M
RUN yum install --nogpgcheck -y nco
# Total download size: 3.4 M
RUN yum install --nogpgcheck -y bc dc
# Total download size: 110 k
RUN yum install --nogpgcheck -y ghostscript
# Total download size: ----
RUN yum install --nogpgcheck -y freetype freetype-devel
# Total download size: 409 k
COPY ./USGS-software/Ash3d_web/Container_Notes/epstopdf /usr/bin/epstopdf

